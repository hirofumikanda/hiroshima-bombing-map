{
  "version": 8,
  "sources": {
    "osm": {
      "type": "raster",
      "tiles": ["https://tile.openstreetmap.org/{z}/{x}/{y}.png"],
      "attribution": "<a href=\"https://www.openstreetmap.org/copyright\" target=\"_blank\">© OpenStreetMap contributors</a>",
      "minzoom": 10,
      "maxzoom": 18,
      "scheme": "xyz"
    },
    "ort_USA10": {
      "type": "raster",
      "tiles": [
        "https://cyberjapandata.gsi.go.jp/xyz/ort_USA10/{z}/{x}/{y}.png"
      ],
      "attribution": "<a href=\"https://maps.gsi.go.jp/development/ichiran.html#ort_USA10\" target=\"_blank\">地理院タイル(空中写真（1945年～1950年）)</a>",
      "minzoom": 10,
      "maxzoom": 17,
      "scheme": "xyz"
    },
    "airphoto": {
      "type": "raster",
      "tiles": ["/hiroshima-bombing-map/data/airphoto/{z}/{x}/{y}.png"],
      "attribution": "<a href=\"https://www.gsi.go.jp/chugoku/use-19450725.html\" target=\"_blank\">国土地理院「空中写真画像サンプル（昭和20年7月25日撮影）」</a>の図を加工して作成",
      "minzoom": 10,
      "maxzoom": 18,
      "scheme": "xyz"
    },
    "epicenter": {
      "type": "geojson",
      "data": "data/epicenter.geojson"
    },
    "hibaku_buildings": {
      "type": "geojson",
      "data": "data/hibaku_buildings.geojson",
      "attribution": "<a href=\"https://www.city.hiroshima.lg.jp/atomicbomb-peace/fukko/1021101/1026920/1026921/1003420.html\" target=\"_blank\">広島市「被爆建物リスト一覧」</a>"
    }
  },
  "glyphs": "font/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "osm",
      "type": "raster",
      "source": "osm",
      "minzoom": 0,
      "layout": {
        "visibility": "visible"
      }
    },
    {
      "id": "ort_USA10",
      "type": "raster",
      "source": "ort_USA10",
      "minzoom": 10,
      "paint": {
        "raster-opacity": 1.0
      },
      "layout": {
        "visibility": "visible"
      }
    },
    {
      "id": "airphoto",
      "type": "raster",
      "source": "airphoto",
      "minzoom": 10,
      "paint": {
        "raster-opacity": 1.0
      },
      "layout": {
        "visibility": "visible"
      }
    },
    {
      "id": "hibaku_buildings",
      "type": "symbol",
      "source": "hibaku_buildings",
      "layout": {
        "text-field": ["get", "current_name"],
        "text-size": 12,
        "text-variable-anchor": ["top", "right", "bottom", "left"],
        "text-justify": "auto",
        "text-radial-offset": 0.5,
        "text-font": ["Noto Sans Bold"],
        "icon-image": "point",
        "icon-size": 0.3,
        "icon-anchor": "center"
      },
      "paint": {
        "text-color": "#000000",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "epicenter-marker",
      "type": "symbol",
      "source": "epicenter",
      "layout": {
        "text-field": ["get", "symbol"],
        "text-size": 24,
        "text-anchor": "center",
        "text-font": ["Noto Sans Bold"]
      },
      "paint": {
        "text-color": "#ff0000",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    }
  ]
}
